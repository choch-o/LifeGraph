<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.twodevs.chocho.lifegraph" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name="com.twodevs.chocho.lifegraph.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.twodevs.chocho.lifegraph.GraphActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.twodevs.chocho.lifegraph.EventActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.twodevs.chocho.lifegraph.ListActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.twodevs.chocho.lifegraph.CategoryListActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>
